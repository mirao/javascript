    "version": "0.2.0",
    "configurations": [
        {
            // First start http-server in folder with index.html
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1:8080/index.html",
            "webRoot": "${fileDirname}"
        },        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}",
            "runtimeArgs": ["-r", "esm"]
        }
    ]
}